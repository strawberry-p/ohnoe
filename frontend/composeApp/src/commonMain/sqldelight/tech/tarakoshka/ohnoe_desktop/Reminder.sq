CREATE TABLE Reminder (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    text TEXT NOT NULL,
    time INTEGER NOT NULL,
    completed INTEGER NOT NULL DEFAULT 0
);

insertReminder:
INSERT INTO Reminder(text, time)
VALUES (?, ?);

getAllReminders:
SELECT *
FROM Reminder;

completeReminder:
UPDATE Reminder
SET completed = 1
WHERE id = (?);